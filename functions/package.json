{
  "name": "functions",
  "private": true,
  "scripts": {
    "lint": "npx tslint --project tsconfig.json",
    "build": "npx tsc",
    "build-watch": "cp ../admin_api_doc.dev.yml ./lib && npx tsc -w",
    "serve": "npm run build && firebase serve --only functions",
    "serve-only": "export GOOGLE_APPLICATION_CREDENTIALS='../octalogic-portfolio-dev-firebase.json' && firebase serve",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "deploy-firestore-rules-only": "firebase deploy --only firestore:rules"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^8.7.0",
    "firebase-functions": "^3.3.0",
    "moment": "^2.24.0",
    "multer": "github:emadalam/multer",
    "swagger-ui-express": "^4.1.2",
    "uuid": "^3.3.3",
    "yamljs": "^0.3.0",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/multer": "^1.3.10",
    "@types/swagger-ui-express": "^3.0.1",
    "@types/uuid": "^3.4.6",
    "@types/yamljs": "^0.2.30",
    "@types/yup": "^0.26.24",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts}": [
        "npx tslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "./public",
      "./environment",
      "./node_modules",
      "./dist",
      "./coverage"
    ]
  }
}
