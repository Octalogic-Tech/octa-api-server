{
  "name": "functions",
  "private": true,
  "scripts": {
    "lint": "CI=true npx tslint --project tsconfig.json",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "npx tsc",
    "build-watch": "npx tsc -w",
    "start:local": "npm run build && firebase emulators:start",
    "serve": "npm run build && firebase serve --only functions",
    "serve-only": "export GOOGLE_APPLICATION_CREDENTIALS='../octalogic-portfolio-dev-firebase.json' && firebase -P default serve",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy",
    "logs": "firebase functions:log",
    "deploy-firestore-rules-only": "firebase deploy --only firestore:rules"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "firebase-admin": "^11.4.1",
    "firebase-functions": "^3.22.0",
    "module-alias": "^2.2.2",
    "moment": "^2.29.4",
    "multer": "github:emadalam/multer",
    "nanoid": "3.3.4",
    "ua-parser-js": "^1.0.2",
    "uuid": "^8.3.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/module-alias": "^2.0.1",
    "@types/multer": "^1.4.7",
    "@types/nanoid": "^2.1.0",
    "@types/ua-parser-js": "^0.7.36",
    "@types/uuid": "^8.3.4",
    "@types/yup": "^0.29.14",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts}": [
        "npx tslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "./public",
      "./environment",
      "./node_modules",
      "./dist",
      "./coverage"
    ]
  },
  "_moduleAliases": {
    "~controllers": "lib/controllers",
    "~models": "lib/models",
    "~repository": "lib/repository",
    "~schemas": "lib/schemas",
    "~utils": "lib/utils",
    "~middlewares": "lib/middlewares",
    "~exceptions": "lib/exceptions",
    "~interfaces": "lib/interfaces"
  }
}
