service firebase.storage {
  match /b/{bucket}/o {
    match /public/images/{allImages=**} {
      allow read;
      allow write: if request.resource.size < 1024 * 1024
                   && request.resource.contentType.matches('image/.*')
                   && request.auth != null
    }

    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
